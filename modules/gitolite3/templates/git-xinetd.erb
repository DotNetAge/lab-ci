# default: off
# description: The git d√¶mon allows git repositories to be exported using \
#       the git:// protocol.

service git
{
        disable         = no
        socket_type     = stream
        wait            = no
        user            = nobody
        group           = gitolite3
        server          = /usr/libexec/git-core/git-daemon
        server_args     = --base-path=/var/lib/gitolite3/repositories --enable=receive-pack --syslog --inetd --verbose
        log_on_failure  += USERID
}
